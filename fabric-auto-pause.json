{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fabricCapacityName": {
      "type": "string",
      "metadata": {
        "description": "Navnet på Microsoft Fabric kapaciteten der skal pauses/resumes"
      }
    },
    "resourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Navnet på resource group hvor kapaciteten ligger"
      }
    },
    "pauseTime": {
      "type": "string",
      "defaultValue": "17:00",
      "metadata": {
        "description": "Tidspunkt for daglig auto-pause (UTC HH:mm format)"
      }
    },
    "resumeTime": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Tidspunkt for auto-resume (valgfrit, UTC HH:mm format)"
      }
    },
    "apiVersionFabric": {
      "type": "string",
      "defaultValue": "2022-07-01-preview",
      "metadata": {
        "description": "API version for Microsoft Fabric (standard: 2022-07-01-preview)"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "fabricAutoPauseWorkflow",
      "location": "[resourceGroup().location]",
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "actions": {
            "Pause_Fabric": {
              "type": "Http",
              "inputs": {
                "method": "POST",
                "uri": "[concat('https://management.azure.com/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('resourceGroupName'), '/providers/Microsoft.Fabric/capacities/', parameters('fabricCapacityName'), '/suspend?api-version=', parameters('apiVersionFabric'))]",
                "headers": {
                  "Content-Type": "application/json"
                }
              },
              "runAfter": {}
            },
            "Resume_Fabric": {
              "type": "Http",
              "inputs": {
                "method": "POST",
                "uri": "[concat('https://management.azure.com/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('resourceGroupName'), '/providers/Microsoft.Fabric/capacities/', parameters('fabricCapacityName'), '/resume?api-version=', parameters('apiVersionFabric'))]",
                "headers": {
                  "Content-Type": "application/json"
                }
              },
              "runAfter": {},
              "condition": "[not(empty(parameters('resumeTime')))]"
            }
          },
          "triggers": {
            "Pause_Trigger": {
              "type": "Recurrence",
              "recurrence": {
                "frequency": "Day",
                "interval": 1,
                "startTime": "[concat('2024-01-01T', parameters('pauseTime'), ':00Z')]"
              }
            }
          }
        }
      }
    }
  ]
}
