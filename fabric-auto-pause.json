{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fabricCapacityName": {
      "type": "string",
      "metadata": {
        "description": "Navnet på Microsoft Fabric kapaciteten der skal pauses"
      }
    },
    "resourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Navnet på resource group hvor kapaciteten ligger"
      }
    },
    "pauseTime": {
      "type": "string",
      "defaultValue": "17:00",
      "metadata": {
        "description": "Tidspunkt for daglig auto-pause (UTC HH:mm format)"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "fabricAutoPauseWorkflow",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "actions": {
            "Pause_Fabric": {
              "type": "Http",
              "inputs": {
                "method": "POST",
                "uri": "[concat('https://management.azure.com/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('resourceGroupName'), '/providers/Microsoft.Fabric/capacities/', parameters('fabricCapacityName'), '/suspend?api-version=2022-07-01-preview')]",
                "headers": {
                  "Content-Type": "application/json"
                },
                "authentication": {
                  "type": "ManagedServiceIdentity"
                }
              }
            }
          },
          "triggers": {
            "Recurrence": {
              "type": "Recurrence",
              "recurrence": {
                "frequency": "Day",
                "interval": 1,
                "startTime": "[concat('2024-01-01T', parameters('pauseTime'), ':00Z')]"
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2020-04-01-preview",
      "name": "[guid(resourceGroup().id, 'fabricAutoPauseWorkflow', 'Contributor')]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
        "principalId": "[reference(resourceId('Microsoft.Logic/workflows', 'fabricAutoPauseWorkflow'), '2019-05-01', 'Full').identity.principalId]",
        "scope": "[concat(subscription().id, '/resourceGroups/', parameters('resourceGroupName'), '/providers/Microsoft.Fabric/capacities/', parameters('fabricCapacityName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Logic/workflows', 'fabricAutoPauseWorkflow')]"
      ]
    }
  ]
}
